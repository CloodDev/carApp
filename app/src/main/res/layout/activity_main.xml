<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wypożyczalnie samochodów"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/carImageCard"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                app:layout_constraintTop_toBottomOf="@id/titleTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp">

                        <ImageView
                            android:id="@+id/carImageView1"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:scaleType="fitCenter"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/carImageView2"
                            app:layout_constraintHorizontal_weight="1"
                            app:layout_constraintHorizontal_chainStyle="spread" />

                        <ImageView
                            android:id="@+id/carImageView2"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:scaleType="fitCenter"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@id/carImageView1"
                            app:layout_constraintEnd_toStartOf="@id/carImageView3"
                            app:layout_constraintHorizontal_weight="1" />

                        <ImageView
                            android:id="@+id/carImageView3"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:scaleType="fitCenter"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@id/carImageView2"
                            app:layout_constraintEnd_toStartOf="@id/carImageView4"
                            app:layout_constraintHorizontal_weight="1" />

                        <ImageView
                            android:id="@+id/carImageView4"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:scaleType="fitCenter"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@id/carImageView3"
                            app:layout_constraintEnd_toStartOf="@id/carImageView5"
                            app:layout_constraintHorizontal_weight="1" />

                        <ImageView
                            android:id="@+id/carImageView5"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:scaleType="fitCenter"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@id/carImageView4"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_weight="1" />

                        <ImageView
                            android:id="@+id/mainCarImageView"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="16dp"
                            android:scaleType="fitCenter"
                            app:layout_constraintTop_toBottomOf="@id/carImageView1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/brandLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Marka"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/carImageCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guideline" />

            <Spinner
                android:id="@+id/brandSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:padding="8dp"
                android:background="@android:drawable/btn_dropdown"
                app:layout_constraintTop_toBottomOf="@id/brandLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guideline" />

            <TextView
                android:id="@+id/colorLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Kolor"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/carImageCard"
                app:layout_constraintStart_toStartOf="@id/guideline"
                app:layout_constraintEnd_toEndOf="parent" />

            <Spinner
                android:id="@+id/colorSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:padding="8dp"
                android:background="@android:drawable/btn_dropdown"
                app:layout_constraintTop_toBottomOf="@id/colorLabel"
                app:layout_constraintStart_toStartOf="@id/guideline"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/yearLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wybierz rocznik"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/brandSpinner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/yearRangeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1990 - 2023"
                android:textAlignment="center"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/yearLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:id="@+id/priceFromLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cena od"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/yearFromEditText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guideline" />

            <EditText
                android:id="@+id/priceFromEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:inputType="number"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/priceFromLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guideline" />

            <TextView
                android:id="@+id/priceToLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cena do"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/yearToEditText"
                app:layout_constraintStart_toStartOf="@id/guideline"
                app:layout_constraintEnd_toEndOf="parent" />

            <EditText
                android:id="@+id/priceToEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:inputType="number"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/priceToLabel"
                app:layout_constraintStart_toStartOf="@id/guideline"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/searchButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="8dp"
                android:text="Szukaj"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/design_default_color_primary"
                app:layout_constraintTop_toBottomOf="@id/priceFromEditText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/yearRangeTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <EditText
                android:id="@+id/yearFromEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:inputType="number"
                android:hint="Rok od"
                app:layout_constraintTop_toBottomOf="@id/seekBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guideline" />

            <EditText
                android:id="@+id/yearToEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:inputType="number"
                android:hint="Rok do"
                app:layout_constraintTop_toBottomOf="@id/seekBar"
                app:layout_constraintStart_toStartOf="@id/guideline"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>